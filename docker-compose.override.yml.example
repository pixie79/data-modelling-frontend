# Example override file for local development
# Copy this to docker-compose.override.yml and customize as needed
# docker-compose.override.yml is automatically loaded by docker-compose

version: '3.8'

services:
  api:
    environment:
      # Override with your GitHub OAuth credentials
      GITHUB_CLIENT_ID: your_github_client_id
      GITHUB_CLIENT_SECRET: your_github_client_secret
      # Override with a secure JWT secret
      JWT_SECRET: your-secure-jwt-secret-here
      # Enable debug logging
      RUST_LOG: debug

  frontend:
    environment:
      # Override API URLs if needed
      VITE_API_BASE_URL: http://localhost:8081
      VITE_WS_BASE_URL: ws://localhost:8081
    # Mount source for hot reload (development only)
    # volumes:
    #   - ./frontend/src:/app/src:ro

  postgres:
    environment:
      # Override database credentials if needed
      POSTGRES_USER: data_modelling
      POSTGRES_PASSWORD: data_modelling_password
      POSTGRES_DB: data_modelling

