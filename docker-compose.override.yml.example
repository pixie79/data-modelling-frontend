# Example override file for local development
# Copy this to docker-compose.override.yml and customize as needed
# docker-compose.override.yml is automatically loaded by docker-compose

services:
  frontend:
    build:
      args:
        # Override offline mode if needed (defaults to true)
        VITE_OFFLINE_MODE: "true"
        # SDK repository URL (optional - defaults to GitHub)
        SDK_REPO_URL: "https://github.com/pixie79/data-modelling-sdk.git"
        # SDK version/branch (optional - defaults to main)
        SDK_VERSION: "main"
    environment:
      # Runtime environment variables (if needed)
      # Note: Build-time variables are set via build.args above
    # Mount source for hot reload (development only)
    # volumes:
    #   - ./frontend/src:/app/src:ro
